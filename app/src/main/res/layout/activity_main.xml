<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    tools:context=".MainActivity"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/topButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="3dp"
            android:layout_alignParentStart="true"
            >
            <ImageButton
                android:id="@+id/viewEdits"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/history"
                android:paddingLeft="5dp"
                style="?android:attr/buttonBarButtonStyle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="3dp"
            android:layout_alignParentRight="true"
            >
            <ImageButton
                android:id="@+id/editphoto"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="@drawable/purple_checked"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/persons"
        android:layout_centerInParent="true"
        android:layout_below="@+id/topButtons"
        android:layout_above="@+id/buttonLayout"
        android:contentDescription="@string/last_image_taken_from_camera"
        android:adjustViewBounds="true"
        android:id="@+id/image"
        />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
       >

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/tool_layout"
            android:paddingTop="3dp"
            >
            <ImageButton
                android:id="@+id/getphoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/gallery"
                android:paddingLeft="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Gallery"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/tool_layout"
            android:paddingTop="3dp"
            >
            <ImageButton
                android:id="@+id/camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/camera"
                android:paddingLeft="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Camera"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>